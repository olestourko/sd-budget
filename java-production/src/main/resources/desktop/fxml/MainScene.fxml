<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <MenuBar fx:id="mainMenu"
                 AnchorPane.leftAnchor="0"
                 AnchorPane.rightAnchor="0">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Save"/>
                    </items>
                </Menu>
                <Menu text="View">
                    <items>
                        <CheckMenuItem text="3-Month View"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane fx:id="contentContainer"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="30"
                    AnchorPane.bottomAnchor="30">
        </AnchorPane>
        <HBox spacing="5.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0">
            <children>
                <Button id="previousMonthButton" fx:id="previousMonthButton" mnemonicParsing="false" text="Previous Month" />
                <Button id="nextMonthButton" fx:id="nextMonthButton" mnemonicParsing="false" text="Next Month" />
            </children>
        </HBox>
        <Button fx:id="scratchpadViewButton" text="Scratchpad" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" />
    </children>
</AnchorPane>
